
<%= profile_image_for_show(@user) %>

<h1>
  <%= @user.name %>
</h1>

<p>
  <%= mail_to @user.email, @user.email %>
</p>

<footer>
  <nav>
    <%	 if current_user?(@user) %>
    <%= link_to 'Edit Account',
                edit_user_path(@user),
                method: :get,
                class: 'button' %>

    <%= link_to 'Delete Account',
                @user,
                method: :delete,
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
        <%	 end %>
  </nav>
</footer>
