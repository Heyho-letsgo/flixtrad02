<header id="content-header">
  <h1>Sign In</h1>
</header>
<p>
  No account yet? <%= link_to 'Sign up!', signup_path %>
</p>

<%= form_tag(session_path) do %>
    <fieldset>
      <ol>
        <li class="required">
          <%= label_tag :email, "Email ou username"  %>
          <%= text_field_tag :email || :username, nil, autofocus: true, size: 40, required: true %>
        </li>
        <li class="required">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, size: 40, required: true %>
        </li>
      </ol>
      <p>
        <%= submit_tag 'Sign In' %>
      </p>
    </fieldset>
<% end %>